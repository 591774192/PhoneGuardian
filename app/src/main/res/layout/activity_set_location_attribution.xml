<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="#accc"
    >



    <ImageView
        android:id="@+id/setLocationAttributionActivity_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/drag"
        android:layout_centerInParent="true"
        />

    <Button
        android:id="@+id/setLocationAttributionActivity_bt_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="按中提示框拖拽到任意位置"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/setLocationAttributionActivity_bt_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="按中提示框拖拽到任意位置"
        android:background="@android:color/holo_blue_dark"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        />


</RelativeLayout>